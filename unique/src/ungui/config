ungui.state = enable
ungui.dep = unbase unmath unogl unvis unobj

# linux-gcc build options
linux-gcc.ungui.C.flags += $(shell pkg-config --cflags freetype2)
linux-gcc.ungui.L.opts += $(shell pkg-config --libs freetype2)
