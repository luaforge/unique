unvis.state = enable

linux-gcc.unvis.C.flags = $(shell pkg-config --cflags libpng)
linux-gcc.unvis.L.opts = $(shell pkg-config --libs libpng)
linux-gcc.unvis.L.l = jpeg

unvis.dep = unbase unmath unogl undata
